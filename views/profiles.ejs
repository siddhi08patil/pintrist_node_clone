<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center justify-center mt-20">
        <div>
            <div class="h-32 w-32 bg-zinc-200 rounded-full">
                <img class="h-full w-full object-cover overflow-hidden" src="/images/uploads/ user.profileiamge %>" alt="">
                <span id="uploadloadicon" class="h-10 -10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-700">
                    <i class="ri-pencil-fill" ></i>
                </span>
            </div>
        </div>
        <h1 class="text-3xl font-semibold text-white">siddhi patil</h1>
        <h3>@username</h3>
        <a href="/edit" class="mt-5 px-10 py-2 px-7 text-sm font-semibold bg-zinc-700 rounded-full">edit</a>
        <a href="/add" class="px-5 py-2 rounded-lg bg-red-700 text-xs font-semibold">add new post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
        <div class="w-52 h-40 rounded-lg bg-zinc-200">
            <img class="h-full w-full object-cover overflow-hidden" src="/images/uploads/<%= user.posts[0].image %>" alt="">
        </div>
        <h3 class="text-xl font-semibold mt-3">your uploaded pins</h3>
        <h5 class="text-sm font-medium text-zinc-500"><%= user.posts.length %></h5>
    </div>
    </div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })
</script> 
